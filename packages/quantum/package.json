{
  "name": "@spin-network/quantum",
  "version": "0.1.0",
  "description": "Quantum mechanics calculations and utilities",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --build --verbose",
    "clean": "rm -rf dist node_modules coverage",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "docs": "typedoc"
  },
  "dependencies": {
    "@spin-network/graph-core": "workspace:^0.1.0",
    "@types/mathjs": "^9.4.2",
    "mathjs": "^12.4.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^0.34.0",
    "typedoc": "^0.25.13",
    "typescript": "^5.0.0",
    "vitest": "^0.34.0"
  },
  "vitest": {
    "exclude": [
      "node_modules",
      "dist"
    ],
    "environment": "node"
  }
}
